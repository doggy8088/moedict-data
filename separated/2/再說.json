{
  "heteronyms": [
    {
      "bopomofo": "ㄗㄞˋ　ㄕㄨㄛ",
      "definitions": [
        {
          "def": "再商量、討論。",
          "example": [
            "如：「此事明天再說。」"
          ]
        },
        {
          "def": "對於一時無法解決的問題，所用的拖延之辭。",
          "example": [
            "如：「這問題實在很困擾，我看再說吧　！」"
          ]
        },
        {
          "def": "重行申說。",
          "example": [
            "如：「我沒聽清楚，請你再說一遍。」"
          ]
        },
        {
          "def": "表示推進一層的連接詞。",
          "example": [
            "如：「再說他也沒有這份能耐。」"
          ]
        }
      ],
      "pinyin": "zài shuō"
    }
  ],
  "title": "再說"
}