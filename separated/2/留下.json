{
  "heteronyms": [
    {
      "bopomofo": "ㄌㄧㄡˊ　˙ㄒㄧㄚ",
      "definitions": [
        {
          "antonyms": "遷移",
          "def": "停止在某一地方。"
        },
        {
          "def": "阻攔人不使離去。",
          "example": [
            "如：「待會兒看見老總，記得把他留下。」"
          ]
        },
        {
          "def": "保有、保留。",
          "example": [
            "如：「他每次出國，都會把機票留下。」"
          ]
        },
        {
          "def": "遺留、放下。",
          "example": [
            "如：「他死後留下幼兒弱女，無人撫養。」"
          ]
        }
      ],
      "pinyin": "liú xia"
    }
  ],
  "title": "留下"
}